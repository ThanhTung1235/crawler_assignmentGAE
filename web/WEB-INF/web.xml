<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <servlet>
        <servlet-name>CategoryAPI</servlet-name>
        <servlet-class>crawler.api.CategoryAPI</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoryAPI</servlet-name>
        <url-pattern>/_api/category</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddQueue</servlet-name>
        <servlet-class>crawler.controller.AddQueue</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddQueue</servlet-name>
        <url-pattern>/admin/add-queue</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetQueue</servlet-name>
        <servlet-class>crawler.controller.GetQueue</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetQueue</servlet-name>
        <url-pattern>/admin/get-queue</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>ObjectifyFilter</filter-name>
        <filter-class>com.googlecode.objectify.ObjectifyFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ObjectifyFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>MyObjectifyFilter</filter-name>
        <filter-class>crawler.filter.MyObjectifyFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>MyObjectifyFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

</web-app>